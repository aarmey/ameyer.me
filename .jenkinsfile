pipeline {
  agent any
  environment {
    PATH = "/bin:/usr/sbin:/usr/bin:/usr/local/bin:/usr/local/texlive/2017/bin/x86_64-darwin/:$HOME/.gem/bin"
    LC_ALL = "en_US.UTF-8"
  }
  stages {
    stage('Build') {
      steps {
        sh 'git submodule update --init'
        sh 'git clean -ffdx'
        sh 'git submodule update --recursive --remote'
        sh 'bundle install --path ~/.gem'
        sh 'bundle exec jekyll build'
      }
    }
    stage('Test'){
      steps {
        //sh 'bundle exec htmlproofer --check-html --http-status-ignore "999,400" --assume-extension ./_site'
        sh 'echo Test skipped.'
        }
      }
    stage('Deploy') {
      when {
        expression { env.BRANCH_NAME == 'master' }
      }
      steps {
        sh 'cd _site; git init; git config user.name "Jenkins CI"'
        sh 'cd _site; git config user.email "jenkins@asmlab.org"'
        sh 'cd _site; git remote add upstream "git@github.com:aarmey/ameyer.me.git"'
        sh 'cd _site; git fetch upstream; git reset upstream/gh-pages; touch .'
        sh 'echo "ameyer.me" > _site/CNAME'
        sh 'cd _site; git add -A .; git status'
        sh 'cd _site; git commit -m "Jenkins $BUILD_ID auto-pushed"'
        sh 'cd _site; git push -q upstream HEAD:gh-pages'
      }
    }
  }
}
